<div class="product">

  
  <span><%= link_to image_tag(product.image), product %></span>
  
  <h2><%= link_to product.name, product %></h2>

  <p>
    <b>Price: </b><%= number_to_currency(product.price) %>
  </p>

  <%= button_to 'Add to Cart', line_items_path(product_id: product) %>

</div>