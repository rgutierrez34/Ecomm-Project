<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h2>Shopping Cart</h2>

<table>
  <tr>
    <td>Qty</td>
    <td>Product Name</td>
    <td>Price</td>
  </tr>
  <% @cart.line_items.each do |item| %>
  	<tr>
      <td><%= item.quantity %></td>
      <td><%= item.product.name %></td>
      <td><%= item.product.price %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Continue Shopping', products_path %> 